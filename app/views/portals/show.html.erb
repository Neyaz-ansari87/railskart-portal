<html>
<p id="notice"><%= notice %></p>
<div class="col-lg-8 ">
  <div class="card" style="width: 50rem;">
  <div class="card-header text-center">
    Railskart Portal
  </div>
  <div class="card shadow">
  <div class="card-body">
<p>
  <strong>Company Name:</strong>
  <%= @portal.company_name %>
</p>

<p>
  <strong>Applied From:</strong>
  <%= @portal.applied_from %>
</p>

<p>
  <strong>Applied Link:</strong>
  <%= link_to 'Visit Url', "http://#{@portal.applied_from_link}" %>
</p>

<p>
  <strong>Date Of Application:</strong>
  <%= @portal.date_of_application %>
</p>

<p>
  <strong>Status:</strong>
  <% if @portal.status == true %> 
             Applied
             <%else%>
             Not Applied
             <%end%>
</p>

  <div class="card-footer text-muted">
    <div class="d-flex justify-content-center">
    <span class="mx-2">  
    <%= link_to "EDIT", edit_portal_path(@portal), class:"btn btn-primary" %>
    </span>
    <span class="mx-2">
    <%= link_to "BACK", portals_path, class:"btn btn-primary" %>
    </span>
    <span class="mx-2">
    <%= button_to "DESTROY", @portal, method: :delete, class:"btn btn-primary" %>
    </span>
    </div>
  </div>

</div>
</div>
</html>

